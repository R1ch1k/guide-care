# PostgreSQL
DATABASE_URL=postgresql+asyncpg://guidecare:guidecare@localhost:5432/guidecare

# LLM Mode: "api" for OpenAI API, "local" for gpt-oss-20b via local server
LLM_MODE=api

# OpenAI API (used when LLM_MODE=api)
OPENAI_API_KEY=sk-proj-your-key-here
OPENAI_MODEL=gpt-4o

# Local model (used when LLM_MODE=local)
# Point to a vLLM / text-generation-inference server running gpt-oss-20b
LOCAL_MODEL_URL=http://localhost:8080/v1
LOCAL_MODEL_NAME=gpt-oss-20b

# LangGraph / Workflow (placeholders)
LANGGRAPH_API_URL=
LANGGRAPH_API_KEY=
LANGGRAPH_WORKFLOW_ID=

# CORS (comma-separated origins, or leave empty for *)
CORS_ORIGINS=http://localhost:3000

# FastAPI
APP_HOST=0.0.0.0
APP_PORT=8000
